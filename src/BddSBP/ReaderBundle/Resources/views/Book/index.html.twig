{% extends "::base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}
<ul class="thumbnails">
  {% for book in books %}
    <li class="span4">
        
      {%  if book.image %}
          
           <img src="{{ asset(book.image.path) }}" width="150" height="200">
            
      {% else %}      
      <img src="holder.js/150x200" alt="">
      {% endif %}
      <h3><a href="{{ path('book_show',{ 'id': book.id }) }}" > {{ book.title}}</a> </h3>
      <p>{{ book.author }}</p>
    </li>
{% endfor %}
</ul>
 </div>
{% endblock %}