{% extends "::base.html.twig" %}

{% block title %}{% endblock %}


{% block body %}
<div class="row span3">
  <img id="cover" data-src="holder.js/200x300">
</div>
<div class="row span8">
  <div class="page-header">
    <h1>{{ book.title }}<br><small>{{ book.author }}</small></h1>
  </div>
  <p class="muted">{{ book.description }}</p>
  <hr />
  
  
     {% if is_granted('DELETE',book) %}
 
    
  <form style="display:inline" class="pull-right"  action="{{ path('book_delete', { 'id': book.id }) }}" method="post">
      
         <input type="hidden" name="_method" value="DELETE" />
           {{ form_widget(delete_form) }}
         <button style="display:inline"  type="submit" class="btn btn-danger">Delete</button>
         
      </form>
  <p class="pull-right">&nbsp;</p>
  {% endif %}
  {% if is_granted('EDIT',book) %}
  <p class="pull-right">
    <a href="{{ path('book_edit',{'id':book.id})}}">Edit</a> 
      
</p>
        
  {% endif %}
      
    
</div>
 </div>
{% endblock %}